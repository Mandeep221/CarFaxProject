<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ilr_cv_container"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:clickable="true"
        android:background="?android:selectableItemBackground"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="280dp">
                <ImageView
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:id="@+id/ilr_vehicle_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/ilr_tv_photo_url_not_found"
                    android:visibility="gone"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/no_photo_url_found_msg"
                    android:textSize="16sp"/>
            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/verabd"
                    android:id="@+id/ilr_year_make"
                    android:textColor="@color/colorTextPrimary"
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="@color/colorTextPrimary"
                    android:fontFamily="@font/vera"
                    android:id="@+id/ilr_price_mileage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:textColor="@color/colorTextPrimary"
                    android:fontFamily="@font/vera"
                    android:id="@+id/ilr_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />

                <Button
                    android:layout_marginTop="20dp"
                    android:id="@+id/ilr_btn_call_dealer"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textAllCaps="true"
                    android:fontFamily="@font/verabd"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/button_bg_white_with_top_border"
                    android:text="@string/call_dealer_label" />

            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>
